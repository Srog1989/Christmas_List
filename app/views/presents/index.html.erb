<%= flash[:message]%>
<h1><%= "Welcome, #{current_user.name}" %></h1>
<%= flash[:error]%>
<br>
<h3> Here are the children you have bought Christmas presents for:</h3>
<h5> Click on a present to see its details</h5>
<% @recipients.each do |recipient|%>
<h4><%=recipient.name %></h4>
<% recipient.presents.each do |present|%>
<h5><%= link_to present.name, user_present_path(current_user, present) %></h5>
<%end%>
<%end%>

