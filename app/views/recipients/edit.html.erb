<h1> Edit this Recipient</h1>
<%= render partial: '/layouts/errors', locals: {object: @recipient}%>
<p>
<%= form_for @recipient do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
<br>
    <%= f.label "Email" %><br>
    <%= f.text_field :email %><br>
<br>
   <%= f.label "Address" %><br>
    <%= f.text_field :address %><br>
<br>
   <%= f.label "Favorite Color" %><br>
    <%= f.text_field :favorite_color %><br>
    <%= f.submit "Update Recipient" %><br>
<% end %>