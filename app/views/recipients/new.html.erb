<h1> Add a new Recipient</h1>
<%= render partial: '/layouts/errors', locals: {object: @recipient}%>
<p>
<%= form_for @recipient do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
<br>
    <%= f.label "Email" %><br>
    <%= f.text_field :email %><br>
<br>
    <%= f.submit "Create Recipient" %><br>
<% end %>